{% extends 'layout.njk' %}

{% block body %}

    <div class="container">
        <div class="row text-center">
            <div class="col-6 offset-3">

                <h2>Contato</h2>

                {% if errors %}
                    <div class="alert alert-danger">
                        <ul>
                            {% for error in errors %}
                                <li>{{ error.msg }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                {% if success %}
                    <div class="alert alert-success">
                        Mensagem enviada com sucesso.
                    </div>
                {% endif %}

                <form action="/contact" name="form" method="post">
                    <div class="form-group">
                        <label for="email" class="required">Email</label>
                        <input type="email" id="email" name="email" required="required" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="msg" class="required">Mensagem</label>
                        <input type="text" id="msg" name="msg" required="required" class="form-control">
                    </div>

                    <div class="g-recaptcha" data-sitekey="{{ recaptchaPublicKey }}"></div>

                    <div class="form-group">
                        <button type="submit" id="save" name="save" class="btn btn-primary mt-4 btn">Enviar</button>
                    </div>
                    {# TODO: csrf #}
                </form>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ super() }}
    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}